<div class="container">
<h1 class="text-danger">Participants List</h1>
<%= link_to "Add New Participant", new_participant_path %>
<table class="table table-striped">
<thead>
<th>Name</th>
<th>Email</th>
<th>Gender</th>
<th>Date of Birth</th>
<th>Phone Number</th>
<th>Method of Contact</th>
<th>Remarks</th>
<th>Coordinator</th>
<th>Options</th>
</thead>
  <% @participants.each do |participant| %>
  <tr>
    <td><%= link_to participant.name, participant_path(participant) %></td>
    <td><%= participant.email %></td>
        <td><%= participant.gender %></td>
            <td><%= participant.date_of_birth %></td>
                <td><%= participant.phone_number %></td>
                    <td><%= participant.method_of_contact %></td>
                        <td><%= participant.remarks %></td>
                            <td><%= participant.Coordinator %></td>
    <td>
    <%= link_to "Edit Info", edit_participant_path(participant) %>
    <%= link_to "Remove", participant, method: :delete, data: { confirm: "Are you sure you want to delete this participant?" } %>
    </td>
  </tr>
    <% end %>
</table>
</div>